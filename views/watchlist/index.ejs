<h1>My Watchlist</h1>

<hr>

<% if (user.symbols.length < 1){ %>
    <div class="well">
        <h4>Please add symbols to your watchlist!</h4>
    </div>
<% }else { %>

<% user.symbols.forEach(function(symbol) { %>
  <div class="well">
    <h2>Symbol Name:<%= symbol.name %></h2>
    <h2>Symbol:<%= symbol.symbol %></h2>
    <form action="/watchlist/<%=symbol.id%>/?_method=DELETE" method="POST">
        <input type="submit" value="Delete">
      </form>
  </div>
<% }) %>

<%}%>

<hr/>

